# Environment example for vinc-api
VINC_ENV=dev
VINC_DEBUG=true
VINC_API_V1_PREFIX=/api/v1
VINC_TENANT_HEADER=X-Tenant-ID
# Comma-separated list or JSON list
VINC_CORS_ORIGINS=*
# Database
VINC_DATABASE_URL=postgresql+psycopg://keycloak:keycloak@localhost:5432/vinc
VINC_DB_POOL_SIZE=10
VINC_DB_MAX_OVERFLOW=20
VINC_DB_POOL_TIMEOUT=30
VINC_DB_ECHO=false

# Redis
VINC_REDIS_URL=redis://:pass@localhost:6379/0
VINC_REDIS_MAX_CONNECTIONS=100
VINC_REDIS_SOCKET_TIMEOUT=5

# MongoDB
VINC_MONGO_URL=mongodb://admin:admin@localhost:27017/?authSource=admin
VINC_MONGO_DB=app
VINC_MONGO_MIN_POOL_SIZE=0
VINC_MONGO_MAX_POOL_SIZE=100

# Observability (OTLP: Jaeger / Tempo)
VINC_OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
VINC_OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
# VINC_OTEL_EXPORTER_OTLP_HEADERS=authorization=Bearer token
VINC_OTEL_SERVICE_NAME=vinc-api
VINC_OTEL_SAMPLE_RATIO=1.0

# Keycloak & JWT
VINC_KEYCLOAK_SERVER_URL=http://localhost:8080
VINC_KEYCLOAK_REALM=vinc
VINC_KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
VINC_KEYCLOAK_ADMIN_CLIENT_SECRET=super-secret
VINC_KEYCLOAK_ADMIN_USERNAME=admin
VINC_KEYCLOAK_ADMIN_PASSWORD=admin
VINC_KEYCLOAK_ADMIN_USER_REALM=master
VINC_KEYCLOAK_DEFAULT_INVITE_ACTIONS=UPDATE_PASSWORD,VERIFY_EMAIL
VINC_KEYCLOAK_SUPPLIER_ATTRIBUTE=supplier
VINC_KEYCLOAK_ALLOWED_CUSTOMERS_ATTRIBUTE=allowed_customers
VINC_KEYCLOAK_ALLOWED_ADDRESSES_ATTRIBUTE=allowed_addresses
VINC_KEYCLOAK_ROLE_ATTRIBUTE=role
VINC_KEYCLOAK_JWKS_URL=http://localhost:8080/realms/vinc/protocol/openid-connect/certs

VINC_JWT_ENABLED=true
VINC_JWT_AUDIENCE=
VINC_JWT_TEST_SECRET=local-dev-secret
VINC_JWT_CACHE_TTL=300
VINC_JWT_ME_CACHE_SECONDS=30
