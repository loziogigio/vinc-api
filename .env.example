# Environment example for vic-api
VIC_ENV=dev
VIC_DEBUG=true
VIC_API_V1_PREFIX=/api/v1
VIC_TENANT_HEADER=X-Tenant-ID
# Comma-separated list or JSON list
VIC_CORS_ORIGINS=*
# Database
VIC_DATABASE_URL=postgresql+psycopg://keycloak:keycloak@localhost:5432/vic
VIC_DB_POOL_SIZE=10
VIC_DB_MAX_OVERFLOW=20
VIC_DB_POOL_TIMEOUT=30
VIC_DB_ECHO=false

# Redis
VIC_REDIS_URL=redis://:pass@localhost:6379/0
VIC_REDIS_MAX_CONNECTIONS=100
VIC_REDIS_SOCKET_TIMEOUT=5

# MongoDB
VIC_MONGO_URL=mongodb://admin:admin@localhost:27017/?authSource=admin
VIC_MONGO_DB=app
VIC_MONGO_MIN_POOL_SIZE=0
VIC_MONGO_MAX_POOL_SIZE=100

# Observability (OTLP: Jaeger / Tempo)
VIC_OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
VIC_OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
# VIC_OTEL_EXPORTER_OTLP_HEADERS=authorization=Bearer token
VIC_OTEL_SERVICE_NAME=vic-api
VIC_OTEL_SAMPLE_RATIO=1.0

# Keycloak & JWT
VIC_KEYCLOAK_SERVER_URL=http://localhost:8080
VIC_KEYCLOAK_REALM=vic
VIC_KEYCLOAK_ADMIN_CLIENT_ID=admin-cli
VIC_KEYCLOAK_ADMIN_CLIENT_SECRET=super-secret
VIC_KEYCLOAK_ADMIN_USERNAME=admin
VIC_KEYCLOAK_ADMIN_PASSWORD=admin
VIC_KEYCLOAK_ADMIN_USER_REALM=master
VIC_KEYCLOAK_DEFAULT_INVITE_ACTIONS=UPDATE_PASSWORD,VERIFY_EMAIL
VIC_KEYCLOAK_SUPPLIER_ATTRIBUTE=supplier
VIC_KEYCLOAK_ALLOWED_CUSTOMERS_ATTRIBUTE=allowed_customers
VIC_KEYCLOAK_ALLOWED_ADDRESSES_ATTRIBUTE=allowed_addresses
VIC_KEYCLOAK_ROLE_ATTRIBUTE=role
VIC_KEYCLOAK_JWKS_URL=http://localhost:8080/realms/vic/protocol/openid-connect/certs

VIC_JWT_ENABLED=true
VIC_JWT_AUDIENCE=
VIC_JWT_TEST_SECRET=local-dev-secret
VIC_JWT_CACHE_TTL=300
VIC_JWT_ME_CACHE_SECONDS=30
